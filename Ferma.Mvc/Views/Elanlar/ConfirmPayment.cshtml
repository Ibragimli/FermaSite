
@{
    ViewData["Title"] = "ConfirmPayment";
}
@model ConfirmViewModel
<section style="padding:100px">

    <form asp-action="confirmpayment" method="post" class="row">
        <div class="form-check col-2">
            <input asp-for="@Model.Value" value="1" class="form-check-input" type="radio" checked>
            <label class="form-check-label">Succes</label>
        </div>
        <div class=" col-2 form-check">
            <input asp-for="@Model.Value" value="0" class="form-check-input" type="radio">
            <label class="form-check-label">False</label>
        </div>
        <div class="col-12"><button type="submit">Send</button></div>
    </form>
</section>