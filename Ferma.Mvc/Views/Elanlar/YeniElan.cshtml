
@{
    ViewData["Title"] = "YeniElan";
}


<main>
    <!-- Bread Crumb  Start -->
    <section class="secDisplay" id="breadCrumbs">
        <div class="casket">
            <div class="row justify-content-center">
                <div class="col-lg-10 col-md-9 col-sm-9 col-9 ">
                    <div class="breadCrumbBox">
                        <ul>
                            <li>
                                <a href="../pages/main.html">
                                    <span>
                                        Ana Səhifə
                                    </span>
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <span>
                                        Elan yaratmaq
                                    </span>
                                </a>
                            </li>

                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--  Bread Crumb End -->
    <!-- Create Poster   Start -->
    <section id="createPoster">
        <div class="container">
            <div class="row justify-content-center">
                <div class=" formBox  col-lg-8 col-md-12 col-sm-12 ">
                    <h1>Yeni Elan</h1>
                    <form class="form-control" asp-action="yenielan" method="post" enctype="multipart/form-data">
                        <!-- Poster Kategoriya Start -->
                        <div class=" mb-3 posterCategorys">
                            <label class="  form-label">Kategoriya*</label>
                            <select class="form-select">
                                <option value="">Siyahıdan seçin</option>
                                <optgroup label="Balıqlar">
                                    <option value="55">dəniz, cay balıqları</option>
                                    <option value="56">akvarium balıqları</option>
                                    <option value="57">akvariumlar və digər</option>
                                    <option value="59">balıqlar üçün yem</option>
                                </optgroup>

                                <optgroup label="ARIÇILIQ">
                                    <option value="131">arıçılıq avadanlıqları</option>
                                    <option value="130">arı yeşikləri</option>
                                    <option value="133">digər</option>
                                </optgroup>

                            </select>
                        </div>
                        <!-- Poster Kategoriya End -->
                        <!-- Poster  Start -->
                        <div class="mb-3 posterName">
                            <label class="form-label">Elanın adı*</label>
                            <input maxlength="100" type="text" class="form-control">
                        </div>
                        <!-- Poster   End -->
                        <!-- Poster Price  Start -->
                        <div class="mb-3 posterPriceBox">
                            <label class="form-label">Qiymət*</label>

                            <div class="posterPrice">
                                <input title="" min="0" max="999999" type="number"
                                       class="form-control posterPriceInput">

                                <div class="posterPriceCurrency">
                                    <div class="form-check ">
                                        <input class="form-check-input" type="radio" name="exampleRadios"
                                               id="exampleRadios1" value="option1" checked>
                                        <label class="form-check-label" for="exampleRadios1">
                                            AZN, ₼
                                        </label>
                                    </div>
                                    <div class="form-check ">
                                        <input class="form-check-input" type="radio" name="exampleRadios"
                                               id="exampleRadios2" value="option2">
                                        <label class="form-check-label" for="exampleRadios2">
                                            USD, $
                                        </label>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <!-- Poster Price  End -->
                        <!-- Poster City Start -->
                        <div class="mb-3 posterCitys">
                            <label class="form-label">Şəhər*</label>
                            <select class="form-select">
                                <option selected="selected" value="">Bakı</option>
                            </select>
                        </div>
                        <!-- Poster City End -->
                        <!-- Poster Describe  Start -->
                        <div class="mb-3 posterDescribe">
                            <label class="form-label">Məzmun</label>
                            <textarea class="form-control" maxlength="3000" type="text" cols="10"
                                      rows="7"></textarea>
                        </div>
                        <!-- Poster Describe End -->
                        <!-- Poster Image  Start -->
                        <div class="mb-3 posterImages">
                            <label class="form-label">Elanın Şəkillər*</label>
                            <!-- Şəkil əlavə et -->


                            <input id="imageInput" type="file" name="images[]" accept="image/png,  image/jpeg"
                                   class="form-control" multiple="">
                            <div>
                                <p id="imageErrorMessage" class="fw-bold "></p>
                            </div>
                            <div class="row" id="temperoryImages"></div>

                        </div>
                        <!-- Poster Image End -->
                        <!-- Poster User  Start -->
                        <div class="mb-3 posterUser">
                            <div class="mb-3 posterName">
                                <label class="form-label">Adınız*</label>
                                <input placeholder="Elnur Ibrahimli" maxlength="100" type="text"
                                       class="form-control">
                            </div>
                            <div class="mb-3 posterEmail">
                                <label class="form-label">Emailiniz</label>
                                <input placeholder="nümünə@gmail.com" maxlength="100" type="email"
                                       class="form-control">
                            </div>
                            <div class="mb-3 posterPhone">
                                <label class="form-label">Nömrəniz*</label>
                                <input class="form-control " placeholder="(077) 777-77-77" type="text" id="phone">

                            </div>
                        </div>
                        <!-- Poster User End -->
                        <!-- Button  Start -->
                        <div class="mb-3 posterButton text-end">
                            <button class="btn ">Əlavə et</button>
                        </div>
                        <!-- Button  Start -->

                    </form>
                </div>

            </div>
        </div>
    </section>
    <!--  Create Poster  End -->
</main>

@section Scripts{
    <script src="~/assets/js/imagePreview.js"></script>
    <script src="~/assets/js/numberRegex.js"></script>
}




