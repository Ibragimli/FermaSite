                                </p>
                                <p>
                                    <a asp-action="daxilol" asp-controller="profile">Daxil ol</a>
                                </p>
                                <p>
                                    <a asp-controller="elanlar" asp-action="yenielan">Yeni Elan</a>
                                </p>

                            </div>
                            <!-- Grid column -->
                            <!-- Grid column -->
                            <div class="footerInformation  col-lg-3 col-md-3 col-6 ">
                                <!-- Links -->
                                <h5 class="text-uppercase fw-bold ">
                                    İnformasİya
                                </h5>
                                <p>
                                    <a asp-action="index" asp-controller="istifadecisertleri">
                                        İstifadə
                                        qaydaları
                                    </a>
                                </p>
                                <p>
                                    <a asp-action="index" asp-controller="sevimliler">Sevimlilər</a>
                                </p>


                                <p>
                                    <a asp-action="index" asp-controller="bizimleelaqe">Əlaqə</a>
                                </p>
                            </div>
                            <!-- Grid column -->
                            <!-- Grid column -->
                            <div class="footerContact   col-lg-3 col-md-4 col-sm-12 ">
                                <!-- Links -->
                                <h5 class="text-uppercase fw-bold ">Əlaqə</h5>
                                <p>
                                    <i class="fas fa-home me-3"></i>
                                    <span>@settings.FirstOrDefault(x => x.Key == "FooterLocation")?.Value </span>
                                </p>
                                <p>
                                    <i class="fas fa-envelope me-3"></i>
                                    <a href="mailto:"> @settings.FirstOrDefault(x => x.Key == "FooterEmail")?.Value </a>
                                </p>
                                <p>
                                    <i class="fas fa-phone me-3"></i>
                                    <a href="tel:@settings.FirstOrDefault(x => x.Key == "FooterNumber")?.Value ">
                                        @settings.FirstOrDefault(x => x.Key == "FooterNumber")?.Value
                                    </a>
                                </p>
                            </div>
                            <!-- Grid column -->
                        </div>

                    </div>
                </div>
                <!-- Grid row -->
            </div>
        </section>
        <!-- Section: Links  -->
        <!-- Copyright Start -->
        <section id="footerCopyright">
            <div class="casket">
                <div class="row">
                    <div class="col-12 copyRightBox">
                        <p>© @nowYear, @settings.FirstOrDefault(x => x.Key == "CopyRight")?.Value </p>
                    </div>
                </div>
            </div>
        </section>
        <!-- Copyright End -->

    </footer>
    <!-- Footer -->


    <script src="~/plugins/bootstrap-5.3.0-alpha3-dist/js/bootstrap.bundle.min.js"></script>


