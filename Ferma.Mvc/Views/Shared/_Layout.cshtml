<body>
    <!-- Google Tag Manager (noscript) -->
    <noscript>
        <iframe src="https://www.googletagmanager.com/ns.html?id=GTM-KGM98ZK"
                height="0" width="0" style="display:none;visibility:hidden"></iframe>
    </noscript>
    <!-- End Google Tag Manager (noscript) -->
    @if (TempData["Error"] != null)
    {
        <input type="hidden" id="toaster-error" value="@TempData["Error"]" />
    }
    @if (TempData["Success"] != null)
    {
        <input type="hidden" id="toaster-success" value="@TempData["Success"]" />
    }
    <!-- Header -->
    <header>
        <!-- Header Up Start -->
        <section class="secDisplay" id="headerUp">
            <div class="casket">
                <div class="row">
                    <!-- Head Logo Start -->
                    <div class="col-lg-6 col-md-6  col-6 headLogo">
                        <div class="headImageBox">
                            <a asp-controller="anasehife" asp-action="index">
                                <img src="~/uploads/setting/@settings.FirstOrDefault(x => x.Key == "LogoImage")?.Value" alt="">
                            </a>
                        </div>
                    </div>
                    <!-- Head Logo End -->
                    <!-- Head Login Start -->

                    <div class="col-lg-6 col-md-5  col-6 d-flex justify-content-end align-items-center ">
                        <ul class="headCreateLogin me-2">
                            <li class="headCreateBtn media800">
                                <a asp-controller="elanlar" asp-action="yenielan" class="btn">
                                    <i class="fa-regular fa-square-plus"></i>
                                    <span>Elan yarat</span>
                                </a>
                            </li>
                            <li class="headWishBtn ">
                                <a asp-action="index" asp-controller="sevimliler">
                                    <i class="fa-solid fa-heart"></i>
                                </a>
                            </li>
                            @if (user != null && user.IsAdmin == false)
                            {

                                <li class="headUser">
                                    <div class="dropdown">
                                        <button class=" dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                            <i style=" margin-right: 2px; color: #32CD32; font-size: 23px; " class="fa-solid fa-circle-user"></i>
                                            @if (user?.Name != null)
                                            {
                                                <span style=" color: gray; font-size: 18px; ">

                                                    @(user.Name.Length>8?(user.Name.Substring(0,8)):(user.Name))
                                                </span>

                                            }
                                            else
                                            {
                                                <span style=" color: gray; font-size: 18px; ">
                                                    Profile
                                                </span>

                                            }
                                        </button>
                                        <ul class="dropdown-menu">
                                            <li class="headUser mb-2">
                                                <a style=" display: flex !important; flex-direction: row; justify-content: center; align-items: center; " asp-action="index" asp-controller="profile">
                                                    <i class="fa-solid fa-circle-user"></i>
                                                    <span>Profile</span>
                                                </a>
                                            </li>
                                            <li class="headLogin">
                                                <a style=" display: flex !important; flex-direction: row; justify-content: center; align-items: center; " asp-action="logout" asp-controller="profile">
                                                    <i class="fa-solid fa-circle-right"></i>
                                                    <span>Çıxış</span>
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </li>

                            }
                            else
                            {
                                <li class="headLogin">
                                    <a asp-action="daxilol" asp-controller="profile">
                                        <i class="fa-solid fa-circle-user"></i>
                                        <span>Giriş</span>
                                    </a>
                                </li>
                            }



                        </ul>
                    </div>
                    <!-- Head Login End -->
                </div>
            </div>
        </section>
        <!-- Header Up Start -->
        <!-- Head Search Start -->
        <section class="secDisplay " id="headSearch">
            <div class="casket">
                <div class="row">
                    <div class="col-lg-11 col-md-10 col-sm-11 headSearch">
                        <form asp-action="axtaris" asp-controller="elanlar">
                            <div class="col-1 d-flex justify-content-end">
                                <a>
                                    <i class=" fa-solid fa-magnifying-glass"></i>
                                </a>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6  col-6 ">
                                <input placeholder="Axtarış" type="text" name="posterName" class="form-control">
                            </div>
                            <div class="col-lg-2 col-md-2 col-sm-2 col-2 media800">
                                <select name="cityId" class="form-select">
                                    <option selected disabled>Şəhər</option>
                                    @foreach (var city in cities)
                                    {
                                        <option value="@city.Id">@city.Name</option>
                                    }
                                </select>
                            </div>
                            <div class="col-lg-2 col-md-2 col-sm-2 col-2">
                                <button type="submit" class="ms-5 btn">Axtar</button>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </section>
        <!-- Head Search End -->
        <!-- TabBar Start -->
        <section class=" mediaB800" id="tabBar">
            <ul class="tabBar-ul">
                <li class="tabBar-li tabBar-li-main">
                    <a class="tabBar-link" asp-controller="anasehife" asp-action="index">
                        <i class="tabBar-icon fa-solid fa-house"></i>
                        <span class="tabBar-text">Əsas</span>
                    </a>
                </li>
                <li class="tabBar-li tabBar-li-rules">
                    <a class="tabBar-link" asp-action="index" asp-controller="istifadecisertleri">
                        @*<i class="tabBar-icon fa-solid fa-circle-info"></i>*@
                        <i class="tabBar-icon fa-regular fa-circle-question"></i>
                        <span class="tabBar-text">Qaydalar</span>
                    </a>
                </li>
                <li class="tabBar-addIcon tabBar-li-addIcon">
                    <a class="tabBar-link" asp-controller="elanlar" asp-action="yenielan">
                        <i class=" tabBar-icon fa-solid fa-plus"></i>
                        <span class="tabBar-text">Yeni Elan</span>
                    </a>
                </li>
                <li class="tabBar-li tabBar-li-contact">
                    <a class="tabBar-link" asp-action="index" asp-controller="sevimliler">
                        <i class=" tabBar-icon fa-solid fa-heart"></i>
                        <span class="tabBar-text">Sevimlilər</span>
                    </a>
                </li>
                <li class="tabBar-li tabBar-li-login">
                    @if (user != null && user.IsAdmin == false)
                    {
                        <a class="tabBar-link" asp-action="index" asp-controller="profile">
                            <i class="tabBar-icon fa-solid fa-circle-user"></i>

                            @if (user?.Name != null)
                            {
                                <span class="tabBar-text">

                                    @(user.Name.Length>6?(user.Name.Substring(0,6)):(user.Name))
                                </span>
                            }
                            else
                            {
                                <span class="tabBar-text">
                                    Profile
                                </span>
                            }



                        </a>
                    }
                    else
                    {
                        <a class="tabBar-link me-2" asp-action="daxilol" asp-controller="profile">
                            <i class="tabBar-icon fa-solid fa-circle-user"></i>
                            <span class="tabBar-text">Giriş</span>
                        </a>
                    }
            </ul>
        </section>
        <!-- TabBar End -->
    </header>
    <!-- Header -->
    @RenderBody()


    <!-- Footer -->
    <footer>

        <!-- Section: Links  -->
        <section id="footerInfo">
            <div class="container">
                <!-- Grid row -->
                <div class="row justify-content-center ">
                    <div class="col-lg-10 col-md-12 col-sm-12">
                        <div class="col-12 footerCol row">
                            <!-- Grid column -->
                            <div class="footerPage    col-lg-3 col-md-3 col-6   ">
                                <!-- Links -->
                                <h5 class="text-uppercase fw-bold ">
