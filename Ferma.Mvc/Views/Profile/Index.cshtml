                        <!-- Profile start -->
                        <div class="tab-pane fade" id="nav-profile" role="tabpanel"
                             aria-labelledby="nav-profile-tab" tabindex="0">
                            <form asp-action="edituser" method="post">
                                <div class="formBox">
                                    <div class=" profileTitleBox mb-3">
                                        <h3>Profilə düzəliş et</h3>
                                        <hr>
                                    </div>
                                    <div class="mb-3 profileInputBox">
                                        <label asp-for="ProfileEditDto.Name" class="form-label">Adınız:</label>
                                        <input asp-for="ProfileEditDto.Name" value="@user.Name" type="text" class="form-control">
                                        <span asp-validation-for="ProfileEditDto.Name" class="text-danger"></span>
                                    </div>
                                    <div class="profileInputBox mb-3">
                                        <label asp-for="ProfileEditDto.Email" class="form-label">Email:</label>
                                        <input asp-for="ProfileEditDto.Email" value="@user.Email" type="email" class="form-control">
                                        <span asp-validation-for="ProfileEditDto.Email" class="text-danger"></span>
                                    </div>
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="profileButtonBox mb-3 text-end ">
                                        <button type="submit" class="btn btn-warning">Yadda saxla</button>
                                    </div>
                                    <input type="hidden" asp-for="ProfileEditDto.UserId" value="@user.Id" />
                                </div>

                            </form>
                        </div>
                        <!-- Profile End -->

                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--  Profile  End -->
    <!-- Personal Balance Modal Start -->
    <div class="modal fade" id="PersonalBalanceModal" tabindex="-1" aria-labelledby="PersonalBalanceModalLabel"
         aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">

                    <h1 class="modal-title fs-5" id="exampleModalLabel">
                        <i class="fa-solid fa-wallet"></i>
                        Şəxsi hesabı artır
                    </h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <form asp-action="balanceIncrease" method="post" id="balansId">
                        <hr>
                        <h1>BALANS ARTIMI</h1>
                        <hr>
                        <div class="formBody">
                            <p>Artırılacaq məbləği daxil edin və ya seçin: </p>
                            <div class="formCheckRadio">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-check d-flex">
                                    <input asp-for="BalanceDto.Balance" class="form-check-input moneyDefault" value="1" type="radio" checked>
                                    <label class="form-check-label" asp-for="BalanceDto.Balance"> 1,00 AZN</label>
                                </div>
                                <div class="form-check">
                                    <input asp-for="BalanceDto.Balance" class="form-check-input moneyDefault" value="3" type="radio">
                                    <label asp-for="BalanceDto.Balance" class="form-check-label" for="flexRadioDefault2">3,00 AZN</label>
                                </div>
                                <div class="form-check">
                                    <input asp-for="BalanceDto.Balance" class="form-check-input moneyDefault" value="5" type="radio">
                                    <label asp-for="BalanceDto.Balance" class="form-check-label" for="flexRadioDefault3"> 5,00 AZN</label>
                                </div>
                            </div>
                            <div class="formIput ">
                                <input asp-for="BalanceDto.Balance" placeholder="Məbləğ, AZN" class="form-control customMoney" type="number"
                                       maxlength="4" min="1" max="999" id="customMoney">
                                <label asp-for="BalanceDto.Balance" class="form-check-label"> Məbləğ AZN</label>
                            </div>
                            <input type="hidden" value="@user.Id" asp-for="BalanceDto.AppUserId" />
                        </div>

                        <hr>
                        <h1>ÖDƏNİŞ ÜSULU</h1>
                        <hr>

                        <div class="formBody">
                            <div class="form-check">
                                <input asp-for="BalanceDto.Source" value="@Source.BankCard" class="form-check-input" type="radio" checked>
                                <label asp-for="BalanceDto.Source" class="form-check-label">Bank kartı</label>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary">ÖDƏ</button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
    <!-- Personal Balance Modal End -->
</main>

@section Scripts{

    <script>

        function maxLengthCheck(object) {
            if (object.value.length > object.maxLength)
                object.value = object.value.slice(0, object.maxLength)
        }

        var radioChecks = document.querySelectorAll(".moneyDefault");
        var inputMoney = document.getElementById("balansId");
        var customMoney = document.getElementById("customMoney");


        inputMoney.addEventListener("focusin", (event) => {
            // console.log(event.target.id)
            if (event.target.id == "customMoney") {
                for (var i = 0, iLen = radioChecks.length; i < iLen; i++) {
                    radioChecks[i].checked = false;
                }
            }
        })

        inputMoney.addEventListener("focusin", (event) => {
            // console.log(event.target.name)

            if (event.target.name == "flexRadioDefault") {

                customMoney.value = " ";
            }
        })
    </script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.all.min.js"></script>

    <script src="~/assets/js/SweetAlert.js"></script>
}